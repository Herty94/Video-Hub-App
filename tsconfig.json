{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "strictTemplates": true
  },
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "removeComments": true,
    "sourceMap": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "face/**/*",
    "i18n",
    "interfaces",
    "main.ts",
    "src/**/*",
    "src/main.ts",
    "weights",
  ]
}
